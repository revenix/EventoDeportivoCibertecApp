<selector xmlns:android="http://schemas.android.com/apk/apk/res/android">

  <item android:state_pressed="false">

    <layer-list>
      <item android:right="5dp" android:top="5dp">
        <shape>
          <corners android:radius="50dp"/>
          <solid android:color="#4C67A1"/>
        </shape>
      </item>


      <item android:bottom="2dp" android:left="2dp">
        <shape>
          <gradient android:angle="270" android:endColor="#4C67A1" android:startColor="#4C67A1"/>
          <stroke android:width="1dp" android:color="#4C67A1"/>
          <corners android:radius="1dp"/>
          <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_pressed="true">

    <layer-list>
      <item android:right="5dp" android:top="5dp">
        <shape>
          <corners android:radius="50dp"/>
          <solid android:color="#4C67A1"/>
        </shape>
      </item>


      <item android:bottom="2dp" android:left="2dp">
        <shape>
          <gradient android:angle="270" android:endColor="#b59660" android:startColor="#b59660"/>
          <stroke android:width="1dp" android:color="#BABABA"/>
          <corners android:radius="50dp"/>
          <padding android:bottom="40dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
      </item>
    </layer-list>
  </item>

</selector>
